<%= form_with model: @user, local: true do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "Mark" %>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "mark@example.com" %>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "******" %>
    <%= f.submit %>
<% end %>

<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>